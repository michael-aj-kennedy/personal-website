@model PersonalWebsiteAngular.Models.Blog

@{
    ViewBag.Title = "Blog";
}

<div class="content-main-scroll scrollbar-inner">
    <div style="padding-bottom:50px;">
        <div style="z-index:3; position:absolute; width:100%;">
            <div style="margin:0px; font-weight:bold; border-bottom:solid 1px rgb(143,145,145);"></div>
            <div class="contentMain-header pinnable">Personal Blog</div>                
            <div style="margin:0px; font-weight:bold; border-bottom:solid 1px rgba(0,0,0,.15);"></div>
        </div>
        <div class="pinnableContent" style="padding-top:60px; padding-right:10px; padding-left:10px;">
            @foreach (var blogEntry in Model.BlogData)
            {
                <div style="margin-bottom:10px;">
                    <a href="@(Url.Content("~/v1/Blog/Entry/" + blogEntry.Id))" class="blog-section" data-target="@(Url.Content("~/v1/Blog/Entry/" + blogEntry.Id))" style="color: inherit; text-decoration: none; display: block; padding:10px 15px;">
                        <div style="margin-bottom:5px;">
                            <span class="blog-heading" style="font-size:15px;">@Html.Raw(blogEntry.Title)</span>
                            <span class="blog-item-details hideMobile" style="float:right;">
                                Posted on @Html.Raw(blogEntry.Date.ToShortDateString())
                                @if (blogEntry.Date.Hour != 0)
                                {
                                    @:at @Html.Raw(blogEntry.Date.ToShortTimeString())
                                }
                            </span>   
                            <span class="blog-item-details showMobile">
                                <br>
                                Posted on @Html.Raw(blogEntry.Date.ToShortDateString())
                                @if (blogEntry.Date.Hour != 0)
                                {
                                    @:at @Html.Raw(blogEntry.Date.ToShortTimeString())
                                }
                            </span> 
                        </div>
                     
                        <div class="blog-item-details" style="margin-left:15px; padding:2px 5px 0px 5px; font-size:14px;">
                            @Html.Raw(blogEntry.Summary)
                            <div style="font-style:italic; font-size:13px; margin-top:10px;">Click to read full post...</div>
                        </div>
                    </a>

                    @if (blogEntry != Model.BlogData.Last())
                    {
                        @:<div style="border-top: solid 1px rgba(0,0,0,.15); margin-top:10px;"></div>
                    }                    
                </div>
            }
        </div>
    </div>
</div>